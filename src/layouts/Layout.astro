---
import "../main.css";
const currentUrl = Astro.url;

const isCurrentUrl = (url: string) => {
  return currentUrl.pathname.includes(url);
};
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Daniel Yates - SDET" />
    <title>Yates Dev</title>
    <link rel="icon" type="image/x-icon" href="/src/assets/typing-icon.png" />
    <link rel="stylesheet" href="/src/assets/main.css" />
  </head>
  <body class="text-4">
    <header class="text-2">
      <h1 class="header-font" onclick="location.href='/'">Yates Dev</h1>
      <div class="location-links">
        <a href="/about-me" class={isCurrentUrl("/about-me") ? "active" : ""}
          >About Me</a
        >
        <a
          href="/experience"
          class={isCurrentUrl("/experience") ? "active" : ""}>Experience</a
        >
        <a href="/projects" class={isCurrentUrl("/projects") ? "active" : ""}
          >Projects</a
        >
      </div>
    </header>
    <slot />
  </body>
</html>

<style>
  .active {
    border-bottom: 2px solid var(--border-link-badge);
  }
</style>