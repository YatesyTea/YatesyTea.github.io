---
import LinkBadge from "./linkBadge.astro";

interface Props {
  title: string;
  description: string;
  image: { src: string; alt: string };
  links: { docLink: string; ghLink?: string; demoLink?: string };
}
const { title, description, image, links } = Astro.props;
const { docLink, ghLink, demoLink } = links;
---

<div class="project-display">
  <img src={image.src} alt={image.alt} />
  <div class="project-info">
    <h2>{title}</h2>
    <p>{description}</p>
    {docLink && <LinkBadge text="Documentation" link={docLink} />}
    {ghLink && <LinkBadge text="GitHub" link={ghLink} />}
    {demoLink && <LinkBadge text="Demo" link={demoLink} />}
  </div>
</div>

<style>
  img {
    width: 100%;
    height: 150px;
    object-fit: cover;
  }

  .project-display {
    border-radius: 12px;
    border: 2px solid;
    overflow: hidden;
  }
  
  .project-info {
    padding: 16px;
  }
</style>
